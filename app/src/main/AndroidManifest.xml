<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ua.matvienko_apps.controlyourbudget">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.AddActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.AddGroupDialogActivity"
                  android:screenOrientation="portrait"
                  android:theme="@style/Base.V7.Theme.AppCompat.Dialog">
        </activity>
        <activity android:name=".activity.PiggyDialogActivity"
                  android:screenOrientation="portrait"
                  android:theme="@style/Base.V7.Theme.AppCompat.Dialog">
        </activity>
    </application>

</manifest>