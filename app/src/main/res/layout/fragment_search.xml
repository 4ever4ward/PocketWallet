<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--TODO: There must be icon of expense or incomes-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/expense_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:focusable="true"
                android:src="@drawable/ic_cash" />


            <ImageView
                android:id="@+id/income_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:focusable="true"
                android:src="@drawable/ic_card" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/search_by_date_container"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="top|end"
                android:background="@drawable/bookmark_red_long">

                <EditText
                    android:id="@+id/column_type"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:hint="Column Type" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/search_by_cost_container"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="45dp"
                android:background="@drawable/bookmark_red_long">

                <EditText
                    android:id="@+id/column_value"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:hint="Column Value" />

            </FrameLayout>


        </FrameLayout>

        <ImageButton
            android:id="@+id/button_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_search"
            android:text="Search" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/colorBezh"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <ListView
                android:id="@+id/search_res_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>