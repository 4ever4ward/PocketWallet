<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:datePickerDialogTheme">@style/AppDatePickerDialogTheme</item>
        <item name="android:textColorPrimary">@color/colorBezh</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppDialogActivity" parent="Base.V7.Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/colorBezh</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="AppSpinnerTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorBezh</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="AppSwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:switchTextOn">true</item>
        <item name="colorSwitchThumbNormal">@android:color/darker_gray</item>
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

    <style name="AppDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <!--<item name="android:textColorSecondary">@color/colorPrimaryDark</item>-->
    </style>


</resources>
